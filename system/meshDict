renameBoundary
{
	newPatchNames
	{
		"xMin"
		{
			newName inlet;
			type patch;
		}
	 	"xMax"	
		{
			newName outlet;
			type patch;
		}
	 	"yMin"	
		{
			newName lowerWall;
			type wall;
		}
	    	"yMax"	
		{
			newName upperWall;
			type wall;
		}
	  	"zMin"
		{
			newName back;
			type wall;
		}
		"zMax"	
		{
			newName front;
			type wall;
		}
	}
